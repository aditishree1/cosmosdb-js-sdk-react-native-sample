# Auto detect text files and perform LF normalization
* text=auto

# Ruby/bundler config files should use LF
.bundle/config text eol=lf
Gemfile text eol=lf
Gemfile.lock text eol=lf

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# iOS
*.swift text eol=lf
*.h text eol=lf
*.m text eol=lf
*.mm text eol=lf
Podfile text eol=lf
Podfile.lock text eol=lf

# Android
*.gradle text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.xml text eol=lf
*.pro text eol=lf
gradlew text eol=lf
*.properties text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.config.js text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.jar binary
*.so binary
*.a binary
